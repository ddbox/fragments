##### use 'ce' and 'dos' as variables below #####
ce = compute_element
dos = desired_op_sys
####
+DESIRED_Sites = "$(ce)"
+Desired_OS = "$(dos)"
+REQUIRED_OS = "$(dos)" 
executable = $(ce).sh
output = joboutput/$(ce).$(dos).out.$(cluster).$(process)
error = joboutput/$(ce).$(dos).err.$(cluster).$(process)
log = joboutput/$(ce).$(dos).log.$(cluster).$(process)
