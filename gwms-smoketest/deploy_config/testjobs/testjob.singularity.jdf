#### 'constants' ###########
universe = vanilla
should_transfer_files = YES
when_to_transfer_output = ON_EXIT_OR_EVICT
x509userproxy=/tmp/grid_proxy
Requirements = stringListMember(GLIDEIN_Site,DESIRED_Sites) && (Arch == "INTEL" || Arch == "X86_64") 
+SingularityJob = True

